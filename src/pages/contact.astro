---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | Your Portfolio">
    <div class="container">
        <div class="page-header">
            <h1>Get In Touch</h1>
            <p class="subtitle">Let's create something amazing together</p>
        </div>

        <div class="contact-wrapper">
            <div class="contact-info">
                <h2>Contact Information</h2>
                <p class="intro-text">
                    I'm always interested in hearing about new projects and opportunities. 
                    Whether you have a question or just want to say hi, feel free to reach out!
                </p>

                <div class="info-items">
                    <div class="info-item">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                            <polyline points="22,6 12,13 2,6"/>
                        </svg>
                        <div>
                            <h3>Email</h3>
                            <a href="mailto:np@nickpham.dev">np@nickpham.dev</a>
                        </div>
                    </div>

                    <div class="info-item">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
                            <circle cx="12" cy="10" r="3"/>
                        </svg>
                        <div>
                            <h3>Location</h3>
                            <p>Ventura County</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                            <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"/>
                            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                        </svg>
                        <div>
                            <h3>Social</h3>
                            <div class="social-links">
                                <a href="https://github.com/whiteberyl" target="_blank" rel="noopener">GitHub</a>
                                <span>â€¢</span>
                                <a href="https://www.linkedin.com/in/nick-pham-46887230a/" target="_blank" rel="noopener">LinkedIn</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <form class="contact-form" method="POST" action="#">
                <h2>Send Me a Message</h2>
                
                <div class="form-group">
                    <label for="name">Name</label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        required 
                        placeholder="Your name"
                    />
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required 
                        placeholder="your.email@example.com"
                    />
                </div>

                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input 
                        type="text" 
                        id="subject" 
                        name="subject" 
                        required 
                        placeholder="What's this about?"
                    />
                </div>

                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea 
                        id="message" 
                        name="message" 
                        rows="6" 
                        required 
                        placeholder="Your message..."
                    ></textarea>
                </div>

                <button type="submit" class="submit-btn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="22" y1="2" x2="11" y2="13"/>
                        <polygon points="22 2 15 22 11 13 2 9 22 2"/>
                    </svg>
                    Send Message
                </button>
            </form>
        </div>
    </div>
</Layout>

<style>
    .page-header {
        text-align: center;
        margin-bottom: 4rem;
        animation: fadeInUp 0.8s ease-out;
    }

    .page-header h1 {
        font-family: 'Playfair Display', serif;
        font-size: 3.5rem;
        color: var(--pink-200);
        margin-bottom: 1rem;
    }

    .subtitle {
        font-size: 1.3rem;
        color: var(--text-muted);
        font-style: italic;
    }

    .contact-wrapper {
        max-width: 1100px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: start;
    }

    .contact-info {
        animation: fadeInUp 0.8s ease-out 0.2s backwards;
    }

    .contact-info h2 {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        color: var(--pink-300);
        margin-bottom: 1.5rem;
    }

    .intro-text {
        color: var(--text-muted);
        line-height: 1.8;
        margin-bottom: 3rem;
        font-size: 1.1rem;
    }

    .info-items {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .info-item {
        display: flex;
        gap: 1.25rem;
        align-items: start;
    }

    .info-item svg {
        width: 24px;
        height: 24px;
        color: var(--pink-400);
        flex-shrink: 0;
        margin-top: 0.25rem;
    }

    .info-item h3 {
        font-family: 'Playfair Display', serif;
        font-size: 1.2rem;
        color: var(--pink-200);
        margin-bottom: 0.5rem;
    }

    .info-item p,
    .info-item a {
        color: var(--text-muted);
        margin: 0;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .info-item a:hover {
        color: var(--pink-300);
    }

    .social-links {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .social-links span {
        color: var(--pink-400);
    }

    .contact-form {
        background: linear-gradient(135deg, rgba(236, 72, 153, 0.05), rgba(192, 132, 252, 0.05));
        border: 1px solid rgba(244, 114, 182, 0.2);
        border-radius: 16px;
        padding: 2.5rem;
        animation: fadeInUp 0.8s ease-out 0.4s backwards;
    }

    .contact-form h2 {
        font-family: 'Playfair Display', serif;
        font-size: 1.8rem;
        color: var(--pink-300);
        margin-bottom: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        color: var(--pink-200);
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 0.875rem 1rem;
        background: rgba(10, 4, 18, 0.5);
        border: 1px solid rgba(244, 114, 182, 0.3);
        border-radius: 8px;
        color: var(--text-light);
        font-family: 'Cormorant Garamond', serif;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--pink-400);
        box-shadow: 0 0 0 3px rgba(244, 114, 182, 0.1);
    }

    .form-group input::placeholder,
    .form-group textarea::placeholder {
        color: rgba(224, 191, 212, 0.5);
    }

    .form-group textarea {
        resize: vertical;
        min-height: 120px;
    }

    .submit-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 2rem;
        background: linear-gradient(135deg, var(--pink-500), var(--rose-500));
        color: white;
        border: 2px solid transparent;
        border-radius: 8px;
        font-family: 'Cormorant Garamond', serif;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(244, 114, 182, 0.3);
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 30px rgba(244, 114, 182, 0.5);
        border-color: var(--pink-300);
    }

    .submit-btn svg {
        width: 18px;
        height: 18px;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 968px) {
        .contact-wrapper {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .page-header h1 {
            font-size: 2.5rem;
        }
    }
</style>

<script>
    const form = document.querySelector('.contact-form') as HTMLFormElement;
    
    form?.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Here you would typically send the form data to your backend
        // For now, we'll just show an alert
        alert('Thank you for your message! I\'ll get back to you soon.');
        form.reset();
    });
</script>
