<style>
    .page-header {
        text-align: center;
        margin-bottom: 4rem;
        animation: fadeInUp 0.8s ease-out;
    }

    .page-header h1 {
        font-family: 'Playfair Display', serif;
        font-size: 3.5rem;
        color: var(--pink-200);
        margin-bottom: 1rem;
    }

    .subtitle {
        font-size: 1.3rem;
        color: var(--text-muted);
        font-style: italic;
    }

    .content-grid {
        max-width: 900px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 4rem;
    }

    .about-section {
        animation: fadeInUp 0.8s ease-out;
    }

    .about-section h2 {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        color: var(--pink-300);
        margin-bottom: 1.5rem;
    }

    .about-section p {
        font-size: 1.1rem;
        line-height: 1.8;
        color: var(--text-muted);
        margin-bottom: 1rem;
    }

    .text-box {
        background: linear-gradient(135deg, rgba(236, 72, 153, 0.08), rgba(192, 132, 252, 0.08));
        border: 1px solid rgba(244, 114, 182, 0.2);
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

    .text-box:hover {
        border-color: var(--pink-400);
        box-shadow: 0 8px 24px rgba(244, 114, 182, 0.15);
    }

    .text-box p {
        margin-bottom: 1rem;
    }

    .text-box p:last-child {
        margin-bottom: 0;
    }

    .beyond-code-image {
        margin-top: 2rem;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid rgba(244, 114, 182, 0.2);
        box-shadow: 0 8px 32px rgba(244, 114, 182, 0.15);
    }

    .beyond-code-image img {
        width: 100%;
        height: auto;
        display: block;
    }

    .beyond-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .beyond-category {
        background: linear-gradient(135deg, rgba(236, 72, 153, 0.05), rgba(192, 132, 252, 0.05));
        border: 1px solid rgba(244, 114, 182, 0.2);
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s ease;
    }

    .beyond-category:hover {
        transform: translateY(-4px);
        border-color: var(--pink-400);
        box-shadow: 0 8px 24px rgba(244, 114, 182, 0.2);
    }

    .beyond-category h3 {
        font-family: 'Playfair Display', serif;
        font-size: 1.2rem;
        color: var(--pink-300);
        margin-bottom: 1rem;
    }

    .beyond-items {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .beyond-item {
        display: inline-block;
        padding: 0.4rem 0.9rem;
        background: rgba(244, 114, 182, 0.12);
        color: var(--text-muted);
        border: 1px solid rgba(244, 114, 182, 0.25);
        border-radius: 20px;
        font-size: 0.9rem;
        transition: all 0.2s ease;
    }

    .beyond-item:hover {
        background: rgba(244, 114, 182, 0.2);
        color: var(--pink-200);
        border-color: var(--pink-400);
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .skill-card {
        background: linear-gradient(135deg, rgba(236, 72, 153, 0.08), rgba(192, 132, 252, 0.08));
        border: 1px solid rgba(244, 114, 182, 0.2);
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s ease;
    }

    .skill-card:hover {
        transform: translateY(-4px);
        border-color: var(--pink-400);
        box-shadow: 0 8px 24px rgba(244, 114, 182, 0.2);
    }

    .skill-card h3 {
        font-family: 'Playfair Display', serif;
        font-size: 1.2rem;
        color: var(--pink-300);
        margin-bottom: 0.75rem;
    }

    .skill-card p {
        font-size: 0.95rem;
        color: var(--text-muted);
        margin: 0;
        line-height: 1.6;
    }

    .education-box {
        background: linear-gradient(135deg, rgba(236, 72, 153, 0.08), rgba(192, 132, 252, 0.08));
        border: 1px solid rgba(244, 114, 182, 0.2);
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

    .education-box:hover {
        border-color: var(--pink-400);
        box-shadow: 0 8px 24px rgba(244, 114, 182, 0.2);
    }

    .education-box h3 {
        font-family: 'Playfair Display', serif;
        font-size: 1.4rem;
        color: var(--pink-200);
        margin-bottom: 0.5rem;
    }

    .degree {
        font-size: 1.1rem;
        color: var(--pink-300);
        margin-bottom: 0.5rem;
    }

    .emphasis {
        font-size: 1rem;
        color: var(--pink-400);
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .date {
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.9rem;
        color: var(--text-muted);
        margin: 0;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 640px) {
        .page-header h1 {
            font-size: 2.5rem;
        }

        .skills-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
